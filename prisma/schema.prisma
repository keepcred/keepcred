generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// Модель профиля пользователя
model Profile {
  // Имя пользователя
  username     String   @id
  // Мастер-пароль пользователя в виде хэша
  password     String
  // Дата регистрации пользователя
  registeredAt DateTime @default(now())
}
