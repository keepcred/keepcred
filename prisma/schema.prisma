generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// Модель профиля пользователя
model Profile {
  // Уникальный идентификатор пользователя
  id       String @id @default(uuid())
  // Имя пользователя
  username String
  // Мастер-пароль пользователя в виде хэша
  password String

  @@unique([id, username])
}
